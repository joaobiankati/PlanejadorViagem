<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.cesul.expensetracker.view.ExpenseView">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="100.0" prefWidth="336.0">
                     <children>
                        <TextField fx:id="descriptionField" prefHeight="36.0" prefWidth="334.0" promptText="Digite a descrição do gasto">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="amountField" prefHeight="38.0" prefWidth="334.0" promptText="Digite o valor do gasto">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox prefHeight="100.0" prefWidth="268.0">
                     <children>
                        <DatePicker fx:id="datePicker" prefHeight="45.0" prefWidth="246.0" promptText="Selecione a data do gasto">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </DatePicker>
                        <Button fx:id="addButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="246.0" text="Adicionar">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </top>
         <center>
            <TableView fx:id="expenseTable" prefHeight="200.0" prefWidth="200.0" style="-fx-alignment: CENTER;" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn fx:id="dateCol" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Data" />
                  <TableColumn fx:id="descCol" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Descrição" />
                  <TableColumn fx:id="amountCol" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Valor" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <bottom>
            <HBox alignment="CENTER" prefHeight="36.0" prefWidth="600.0" style="-fx-alignment: CENTER;">
               <children>
                  <Label fx:id="totalLabel" prefHeight="50.0" prefWidth="507.0" text="Valor total R$ 0.00">
                     <padding>
                        <Insets bottom="15.0" left="1.0" top="15.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Button fx:id="deleteButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="65.0" text="Excluir">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
