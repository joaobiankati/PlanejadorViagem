<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="546.0" prefWidth="799.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.cesul.planejadorViagens.controller.TripController">
   <children>
      <BorderPane prefHeight="546.0" prefWidth="799.0">
         <top>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="100.0" prefWidth="245.0">
                     <children>
                        <DatePicker fx:id="dataInicioPicker" prefHeight="26.0" prefWidth="139.0" />
                        <DatePicker fx:id="dataFimPicker" prefHeight="26.0" prefWidth="139.0">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </DatePicker>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="100.0" prefWidth="735.0" spacing="10.0">
                     <children>
                        <TextField fx:id="destinoField" prefHeight="37.0" prefWidth="630.0" promptText="Digie o destino" />
                        <TextField fx:id="orcamentoField" prefHeight="35.0" prefWidth="630.0" promptText="Digite o orçamento">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="btnAdicionar" mnemonicParsing="false" onAction="#adicionar" prefHeight="30.0" prefWidth="127.0" text="Adicionar Viagem">
                                 <HBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="btnRemover" mnemonicParsing="false" onAction="#remover" prefHeight="30.0" prefWidth="123.0" text="Remover Viagem">
                                 <HBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#editar" prefHeight="30.0" prefWidth="109.0" text="Editar">
                                 <HBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <bottom>
            <Label fx:id="lblTotal" text="Total: R$ 0,00" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </BorderPane.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </bottom>
         <center>
            <TableView fx:id="viagensTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <columns>
                  <TableColumn fx:id="colCidade" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Destino" />
                  <TableColumn fx:id="colIni" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Início" />
                  <TableColumn fx:id="colFim" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Fim" />
                  <TableColumn fx:id="colCusto" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Custo" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" />
               </BorderPane.margin>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
